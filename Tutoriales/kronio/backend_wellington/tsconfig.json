{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
	"baseUrl": "./src",
	"typeRoots": [
		"./node_modules/@types"
	],
    "paths": {
      "@app/*": [
        "./*"
      ],
      "@env/*": [
        "../environment/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
	"node_modules",
	"dist",
    "**/*.spec.ts"
  ]
}
